	  <key width="2" c="ctrl" nw="loc switch_greekmath" ne="loc change_method" se="switch_numeric"/>
	  <key width="1.3" c="loc alt" ne="loc meta" sw="switch_emoji" se="config"/>
	  <key width="5.3" c="space" n="switch_forward" s="switch_backward" w="cursor_left" e="cursor_right" slider="true"/>
	  <key width="1.4" c="fn" n="up" e="right" w="left" s="down" nw="loc home" ne="loc page_up" sw="loc end" se="loc page_down"/>
	  <key width="2" c="enter" nw="loc voice_typing" ne="action"/>
  </row>
